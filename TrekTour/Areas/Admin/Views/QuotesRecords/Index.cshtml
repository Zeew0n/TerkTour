@model TrekTour.Areas.Admin.Models.QuotesRecordsModel

@{
    ViewBag.Title = "Index";
     Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="well well-small">
     <div class="row">
        <div class="span16">
<h4> Quotes List </h4>
</div>
        <div class="span17">
           
     <a class="btn btn-primary  pull-right"  href="@Url.Action("Create", "QuotesRecords")">Create New
    </a>
</div>
      </div>

@if (Model.QuotesList.Count > 0)
{
    int Sno = 1;
    <table class="table table-striped">
    <tr>
        <td class="span1">Sno</td>
        <td>
            @Html.LabelFor(model => model.Title)
        </td>
          <td>
            @Html.LabelFor(model => model.Descriptions)
        </td>
         
        <th></th>
    </tr>
@foreach (var item in Model.QuotesList)
{
  
    <tr>
        <td class="span1l">
            @Sno
        </td>
        <td>
            @item.Title
        </td>
         <td>
            @item.Descriptions
        </td>
        <td>
            <div class="btn-group">
                <a href="#" data-toggle="dropdown" class="btn dropdown-toggle table-row-btn">Action
                                    <span class="caret"></span></a>
                <ul style="min-width: 80px;" class="dropdown-menu table-row-d-menu">
                    <li><a href="/Admin/QuotesRecords/Edit/@item.QuotesRecordId">Edit</a></li>
                    <li><a href="/Admin/QuotesRecords/Delete/@item.QuotesRecordId" onclick = "return confirm('Do you want to delete?')">Delete</a></li>
                </ul>
            </div>
        </td>
        
    </tr>
    Sno++;
}
        </table>
}
else
{
    <h4>Rocord not found!!!</h4> 
}
 </div>  